<%- include("../partials/header") %>

    <!-- Bootstrap Grid for ballcourts -->
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome To Yelp4Ball!</h1>
                <p>View our collection of outdoor basketball courts from all over the world. Please help your baller bros by sharing your favorite court locations!!</p>
                <a class="btn btn-primary btn-lg" href="/ballcourts/new">Add New BallCourt</a>
            </div>
        </header>
        
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% ballcourts.forEach(function(ballcourt) { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= ballcourt.image %>" alt="">
                        <div class="caption">
                            <h4><%= ballcourt.name %></h4>
                        </div>
                        <p>
                            <a href="/ballcourts/<%= ballcourt._id%>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

<%- include("../partials/footer") %>