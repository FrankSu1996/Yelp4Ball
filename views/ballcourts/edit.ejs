<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= ballcourt.name%></h1>
        <div style="width:40%; margin: 30px auto;">
            <form action="/ballcourts/<%= ballcourt._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="ballcourt[name]">Name</label>
                    <input class="form-control" type="text" value="<%= ballcourt.name %>" name="ballcourt[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <label for="ballcourt[image]">Image Url</label>
                    <input class="form-control" type="text" value="<%= ballcourt.image %>" name="ballcourt[image]" placeholder="image url">
                </div>
                <div class="form-group ">
                    <label for="ballcourt[description]">Description</label>
                    <input class="form-control" type="text" value="<%= ballcourt.description %>" name="ballcourt[description]" placeholder="description">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input type="text" class="form-control" name="location" id="location" placeholder="Yosemite" value="<%= ballcourt.location%>">
                </div>
                <div class="form-group">
                    <label for="ballcourt[numberPlaying]">Number of People Playing</label>
                    <input class="form-control" type="number" name="ballcourt[numberPlaying]" value="<%=ballcourt.numberPlaying%>" placeholder="Number of People Playing">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/ballcourts">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>