<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= ballcourt.name%></h1>
        <div style="width:40%; margin: 30px auto;">
            <form action="/ballcourts/<%= ballcourt._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="text" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/ballcourts">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>